
<!-- custom level 1 menu items -->
[% FOREACH item IN ui_utils.app_menu() %]
    <div class="menu-item">
        <a href="[% item.value %]">[% item.key %]</a>
    </div>
[% END %]

[% IF c.check_user_roles('admin') %]
    <div class="menu-item"><a href="[% c.uri_for( '/admin' )%]">Admin</a></div>
[% END %]

<!-- standard level 1 menu items -->
<div class="menu-item"><a href="[% c.uri_for( '/search' )%]">Metadata search</a></div>
[% IF section == 'search' %]
[% INCLUDE "${section}/menu.tt" %]
[% END %]

[% IF c.check_user_roles('upload') %]
    <div class="menu-item"><a href="[% c.uri_for( '/upload' )%]">File upload</a></div>
    [% IF section == 'upload' %]
    [% INCLUDE "${section}/menu.tt" %]
    [% END %]
[% END %]

<div class="menu-item"><a href="[% c.uri_for( '/subscription' )%]">Subscription</a></div>

[%
    redirect_params = {
        return_path => '/' _ c.req.path(),
        return_params => ui_utils.stringify_params(c.req.params),
    }
%]

<!--
    This link is here to facilitate indexing by search engine by giving and entry point to all datasets in
    the application. Is it is not meant to be used by humans (but it is not problem if someone actually use it).
    The link is placed in the search menu under the assumption that if you enabled search you will probably
    also want to the page to indexable.
 -->
<div class="menu-item" style="display: none;">
    <a href="[% c.uri_for('/dataset') %]">Browse datasets</a>
</div>
[% IF section == 'dataset' %]
[% INCLUDE "${section}/menu.tt" %]
[% END %]

[% IF c.user_exists %]
    <div class="menu-item"><a href="[% c.uri_for( '/userprofile' )%]">User profile</a></div>
    [% IF section == 'userprofile' %]
    [% INCLUDE "${section}/menu.tt" %]
    [% END %]
    <div class="menu-item"><a href="[% c.uri_for( '/logout', redirect_params )%]">Logout</a></div>
    <p>&nbsp;[% c.user.u_name %] ([% c.user.u_loginname %])</p>
[% ELSE %]
    <div class="menu-item"><a href="[% c.uri_for( '/login', redirect_params )%]">Login</a></div>
[% END %]
