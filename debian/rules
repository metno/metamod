#!/usr/bin/make -f
# -*- makefile -*-

# These are used for cross-compiling and for saving the configure script
# from having to guess our platform (since we know it already)
DEB_HOST_GNU_TYPE   ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)


# changelog option
version=`perl -ne 'if (/metamod-(\d+\.\d+)/) {print $$1; exit 0;}' debian/changelog`

build-version:
	@MMVERSION=${version} && echo $$MMVERSION && \
	perl -pe "s/metamod-2\.x/metamod-$$MMVERSION/g" debian/control.in > debian/control && \
	perl -pe "s/metamod-2\.x/metamod-$$MMVERSION/g" debian/metamod.install.in > debian/metamod-$$MMVERSION.install && \
	perl -pe "s/metamod-2\.x/metamod-$$MMVERSION/g" debian/metamod.dirs.in > debian/metamod-$$MMVERSION.dirs

build: build-stamp build-version
build-stamp: 
	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp 
	rm -f debian/metamod-*.install
	rm -f debian/metamod-*.dirs
	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs


# Build architecture-independent files here.
binary-indep: build install
	dh_install --sourcedir=. -X/.svn/
	dh_installdirs
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb


# Build architecture-dependent files here.
binary-arch: build install

# this is the original binary-arch, not needed for metamod
binary-default: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
	dh_install --sourcedir=debian/tmp
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_python
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install 
